@model Author

<div class="row orderForm">
    <form asp-controller="Author" asp-action="Create" method="post">
        <h3 class="col-md-offset-2">Create New Author</h3>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter author´s name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <a class="btn btn-default" asp-controller="Author" asp-action="List">Return</a>
                <input class="btn btn-primary" value="Create" type="submit" />
            </div>
        </div>
    </form>
</div>


